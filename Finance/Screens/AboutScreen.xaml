<UserControl x:Class="Finance.Screens.AboutScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Finance.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5,5,5,5">
        <RichTextBox IsReadOnly="True">
            <FlowDocument>
                <Paragraph FontSize="50" Margin="5,5,5,5">O programu</Paragraph>
                <Paragraph FontSize="20">
                    Tento program byl vypracován v
                    roce 2021 jako maturitní práce 
                    z programování. Slouží ke
                    snadnému přehledu osobních
                    finančních prostředků.
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</UserControl>
