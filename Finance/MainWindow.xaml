        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finance"
        mc:Ignorable="d"
        Title="Finance" Height="450" Width="800" WindowStartupLocation="CenterScreen" MinWidth="600" MinHeight="400">

    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_Soubor">
                <MenuItem Header="Ú_vodní obrazovka"/>
                <Separator/>
                <MenuItem Header="_Ukončit" Click="ExitCallBack" />
            </MenuItem>
            <MenuItem Header="_Data">
                <MenuItem Header="_Ruční zadání dat"/>
                <MenuItem Header="_Import výpisu"/>
                <Separator/>
                <MenuItem Header="_Výstupy"/>
            </MenuItem>
            <MenuItem Header="_Nápověda">
                <MenuItem Header="_O programu"/>
            </MenuItem>
        </Menu>
    </DockPanel>    
</Window>
